div(class="bg-white shadow rounded-lg")
    .flex.px-4.py-3.items-center.space-x-4
        img(src=`/img/${propiedad.usuario.image}` class="w-14 h-14 rounded-full")
        div
            p(class="font-bold text-lg text-gray-800") Publicado por
            h1(class="font-bold text-lg text-gray-800")= propiedad.usuario.nombre
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`Imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h1(class="text-xl font-bold text-gray-800")= propiedad.titulo
        p(class="text-sm text-gray-600")
            | Habitaciones:  
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-gray-600")
            | WC:  
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-lg font-bold text-gray-600")= propiedad.tipo === 'vender' ? 'Se vende' : 'Se renta'
        p(class="text-sm text-gray-600")
            | #{propiedad.venta ? 'Precio:' : 'Renta:'}
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-mint w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad
